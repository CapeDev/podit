<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- FIXME: convert this to a relative layout to avoid severely nested Linear Layouts -->
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="120dp"
                  android:layout_gravity="left">
        <ImageView android:id="@+id/car_photo"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:background="#ff0000"
                   android:contentDescription="@string/desc_user_photo"/>
        <LinearLayout android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent">
            <TextView android:id="@+id/pod_name"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:textSize="25sp"
                      android:lines="1"
                      android:singleLine="true"
                      android:hint="@string/pod_name"/>
            <TextView android:id="@+id/home_location"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:paddingBottom="0dp"
                     android:paddingTop="0dp"
                     android:hint="@string/home_location_label"/>
            <LinearLayout android:orientation="horizontal"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content">
                <TimePicker
                        android:id="@+id/departure_time_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="45sp"/>
                <TimePicker
                        android:id="@+id/return_time_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="45sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/about_pod_label"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:text="@string/about_pod_label" />
        <TextView android:id="@+id/about_pod"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:lines="3"
                  android:gravity="top"/>
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
                  android:gravity="left"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
        <TextView android:id="@+id/my_pod_members_label"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:background="#0000ff"
                  android:text="@string/pod_members_label"/>

        <ListView android:id="@+id/people_list"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:background="#00ff00"/>
    </LinearLayout>

</LinearLayout>